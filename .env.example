# shortgen Configuration
# Copy this file to .env and adjust as needed

# Whisper model size (tiny, base, small, medium, large)
WHISPER_MODEL=small

# Use GPU acceleration (true/false)
USE_GPU=true

# Output directory
OUTPUT_DIR=output

# Keep intermediate files (true/false)
KEEP_TEMP=false

# Verbose logging (true/false)
VERBOSE=false

# YouTube Upload Configuration
# Enable automatic upload to YouTube (true/false)
UPLOAD_TO_YOUTUBE=false

# Path to OAuth2 client secrets JSON file from Google Cloud Console
# Download from: https://console.cloud.google.com/apis/credentials
YOUTUBE_CREDENTIALS_FILE=client_secrets.json

# Default video privacy status (public, private, unlisted)
YOUTUBE_PRIVACY=private

# Default video title (leave empty to use filename)
YOUTUBE_TITLE=

# Default video description
YOUTUBE_DESCRIPTION=

# Default video tags (comma-separated)
YOUTUBE_TAGS=Shorts,YouTube Shorts
